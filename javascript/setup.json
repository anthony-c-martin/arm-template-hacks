{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "customProviderName": {
            "type": "string"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]"
    },
    "resources": [
        {
            "apiVersion": "2019-04-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('customProviderName')]",
            "location": "[variables('location')]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "apiVersion": "2018-02-01",
            "type": "Microsoft.Web/serverfarms",
            "name": "[parameters('customProviderName')]",
            "location": "[variables('location')]",
            "kind": "functionapp",
            "properties": {
                "maximumElasticWorkerCount": 1
            },
            "sku": {
                "Tier": "Dynamic",
                "Name": "Y1"
            }
        },
        {
            "apiVersion": "2018-11-01",
            "type": "Microsoft.Web/sites",
            "name": "[parameters('customProviderName')]",
            "location": "[variables('location')]",
            "kind": "functionapp",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('customProviderName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('customProviderName'))]"
            ],
            "properties": {
                "name": "[parameters('customProviderName')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~3"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "node"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('customProviderName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('customProviderName')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "~12"
                        }
                    ]
                },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('customProviderName'))]",
                "httpsOnly": true
            }
        },
        {
            "apiVersion": "2018-11-01",
            "type": "Microsoft.Web/sites/functions",
            "name": "[format('{0}/ExecuteJs', parameters('customProviderName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('customProviderName'))]"
            ],
            "properties": {
                "config": {
                    "bindings": [
                        {
                            "authLevel": "function",
                            "type": "httpTrigger",
                            "direction": "in",
                            "name": "req",
                            "methods": [
                                "post"
                            ]
                        },
                        {
                            "type": "http",
                            "direction": "out",
                            "name": "res"
                        }
                    ]
                },
                "files": {
                    "index.js": "
module.exports = async function (context, req) {
    if (req.body) {
        var result = eval(req.body);

        setResponse(context, 200, {result: result});
    } else {
        setResponse(context, 400, {code: 'BadRequest', message: 'Bad Request'});
    }
};

function setResponse(context, code, body) {
    context.res = {
        body: JSON.stringify(body),
        status: code,
        headers: {
            'Content-Type': 'application/json',
        }
    }
}
                    "
                }
            }
        },
        {
            "type": "Microsoft.CustomProviders/resourceproviders",
            "apiVersion": "2018-09-01-preview",
            "name": "[parameters('customProviderName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites/functions', parameters('customProviderName'), 'ExecuteJs')]"
            ],
            "properties": {
                "actions": [
                    {
                        "name": "listExecuteJs",
                        "routingType": "Proxy",
                        "endpoint": "[format('https://{0}.azurewebsites.net/api/ExecuteJs?code={1}', parameters('customProviderName'), listKeys(resourceId('Microsoft.Web/sites/functions', parameters('customProviderName'), 'ExecuteJs'), '2018-11-01').default)]"
                    }
                ]
            }
        }
    ],
    "outputs": {
        "customRpId": {
            "type": "string",
            "value": "[resourceId('Microsoft.CustomProviders/resourceproviders', parameters('customProviderName'))]"
        }
    }
}